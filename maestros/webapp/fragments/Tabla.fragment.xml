<core:FragmentDefinition
    controllerName="com.tasa.maestros.controller.Fragments"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Table
        id="lineItemsList"
        width="auto"
        class="sapUiNoMargin"
        fixedLayout="true"
        growing="true"
        growingThreshold="100"
        growingTriggerText="Mas.."
        growingScrollToLoad="false"
        updateFinished=".onListUpdateFinished"
        noDataText="{i18n>detailLineItemTableNoDataText}"
        busy="{detailView>/busyTable}"
        busyIndicatorDelay="{detailView>/lineItemTableDelay}">
        <headerToolbar>
            <Toolbar>
                <Title
                    id="lineItemsTitle"
                    text="Lista de Registros {=${DATOSMAESTRO>/cantData} > 0 ? '('+${DATOSMAESTRO>/cantData}+')':'(0)'}"
                    titleStyle="H3"
                    level="H3"/>
                <ToolbarSpacer/>
                <Button
                    press="onExportar"
                    icon="sap-icon://excel-attachment"
                    text="Exportar"
                    type="Ghost"/>
                <Button
                    id="idBotonNuevo"
                    text="Nuevo"
                    visible="{detailView>/visibleBtnNew}"
                    press="onNuevoMaestro"
                    icon="sap-icon://add"
                    type="Emphasized"/>
                <SearchField
                    id="searchFieldDetail"
                    showRefreshButton="true"
                    tooltip="{i18n>masterSearchTooltip}"
                    liveChange=".onSearchFilter"
                    width="auto">
                    <layoutData>
                        <OverflowToolbarLayoutData
                            minWidth="150px"
                            maxWidth="240px"
                            shrinkable="true"
                            priority="NeverOverflow"/>
                    </layoutData>
                </SearchField>
            </Toolbar>
        </headerToolbar>
    </Table>
</core:FragmentDefinition>
