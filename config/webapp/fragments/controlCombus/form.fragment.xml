<core:FragmentDefinition
	xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
    <form:Form
        editable="true"
        binding = "{DATOSMAESTRO>/listaControlComb}">
        <form:title>
            <core:Title
                emphasized="true"
                icon="sap-icon://edit"
                text="Ingresar datos"/>
        </form:title>
        <form:formContainers>
           <form:FormContainer>
               <form:formElements>
                   <form:FormElement label="Código">
                       <form:fields>
                           <Input value="{DATOSMAESTRO>CLSIS}" editable="false" />
                       </form:fields>
                   </form:FormElement>
                   <form:FormElement label="Indicador de ejecución">
                       <form:fields>
                           <Select 
                                selectedKey="{DATOSMAESTRO>INEIF}"
                                items="{DATOSMAESTRO>/INEIF}">
                                <core:Item
                                    key="{DATOSMAESTRO>id}"
                                    text="{DATOSMAESTRO>descripcion}"/>
                           </Select>
                       </form:fields>
                   </form:FormElement>
                   <form:FormElement label="Clase de movimiento">
                       <form:fields>
                           <Input value="{DATOSMAESTRO>BWART}" />
                       </form:fields>
                   </form:FormElement>
                   <form:FormElement label="">
                       <form:fields>
                           <Button 
                            text="Guardar" 
                            icon="sap-icon://save" 
                            type="Success" 
                            press="onSaveControlCombus"/>
                       </form:fields>
                   </form:FormElement>
               </form:formElements>
           </form:FormContainer> 
        </form:formContainers>
        <form:layout>
            <form:ResponsiveGridLayout
                adjustLabelSpan="true"
                breakpointL="1024"
                breakpointM="600"
                breakpointXL="1440"
                columnsL="2"
                columnsM="1"
                columnsXL="-1"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                emptySpanXL="-1"
                labelSpanL="4"
                labelSpanM="3"
                labelSpanS="12"
                labelSpanXL="-1"
                singleContainerFullSize="true"
            />
        </form:layout>
    </form:Form>
</core:FragmentDefinition>